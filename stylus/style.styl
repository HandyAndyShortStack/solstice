body
  font 10px sans-serif

.axis path, .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.x.axis path
  display none

.line
  fill none
  stroke steelblue
  stroke-width 1.5px

section.daylight-viz
  width 1200px
  margin 0 auto
  display flex
  flex-direction row

  > .studio-list
    flex 1
  
  > .chart
    flex 2
    display inline-block
    position relative
    width 100%
    padding-bottom 100%
    vertical-align middle
    overflow hidden  

    > svg
      display inline-block
      position absolute
      top 0
      left 0
